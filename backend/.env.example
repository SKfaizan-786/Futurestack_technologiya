# MedMatch AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./medmatch.db
DATABASE_ECHO=false

# Cerebras API (Required)
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_MODEL=llama3.1-8b
CEREBRAS_MAX_TOKENS=1000

# ClinicalTrials.gov API
CLINICALTRIALS_RATE_LIMIT=100

# Security (Required - generate a secure secret key)
SECRET_KEY=your_super_secure_secret_key_here

# Redis Cache (Optional)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# AI Models
SPACY_MODEL=en_core_web_sm
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# CORS Origins (adjust for your frontend)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# HIPAA Compliance
HIPAA_SAFE_LOGGING=true
DATA_RETENTION_DAYS=90