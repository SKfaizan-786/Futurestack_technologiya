# MedMatch AI Docker Environment Configuration
# Healthcare-compliant environment setup

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
API_VERSION=v1

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=medmatch
DB_USER=medmatch_user
DB_PASSWORD=secure_password_change_in_production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Supabase Configuration (Replace with your actual values)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# AI Model Configuration
# Cerebras API (for Llama 3.3-70b)
CEREBRAS_API_KEY=your_cerebras_api_key_here
MODEL_NAME=llama3.3-70b
MODEL_TEMPERATURE=0.3
MODEL_MAX_TOKENS=2000

# spaCy Model Configuration
SPACY_MODEL=en_core_web_sm
SPACY_BATCH_SIZE=32

# Security Configuration
SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000/api/v1
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_change_in_production

# Docker MCP Gateway Creative Features
ENABLE_HEALTH_MONITORING=true
ENABLE_MODEL_CACHING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_AUTO_SCALING=false

# HIPAA Compliance Features
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_ENCRYPTION=true
ENABLE_SECURE_HEADERS=true
DATA_RETENTION_DAYS=2555  # 7 years HIPAA requirement

# Performance Optimization
WORKERS_COUNT=4
WORKER_CONNECTIONS=1000
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=100

# Development/Production Mode
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Healthcare Specific
ENABLE_PHI_PROTECTION=true
ENABLE_CONSENT_TRACKING=true
ENABLE_SECURE_COMMUNICATIONS=true